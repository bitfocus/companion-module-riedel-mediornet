{
	"name": "riedel-mediornet",
	"version": "2.0.0",
	"main": "dist/index.js",
	"scripts": {
		"prepare": "husky install",
		"dev": "yarn build:watch",
		"build": "rimraf dist && yarn build:main",
		"build:main": "tsc -p tsconfig.json",
		"build:watch": "tsc -p tsconfig.json --watch",
		"lint:raw": "eslint --ext .ts",
		"lint": "yarn lint:raw ."
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bitfocus/companion-module-riedel-mediornet.git"
	},
	"license": "MIT",
	"lint-staged": {
		"*.{js,json,md}": [
			"prettier --write"
		],
		"*.{ts}": [
			"yarn lint:raw --fix"
		]
	},
	"dependencies": {
		"@companion-module/base": "~1.1.1",
		"@types/node": "^18.13.0",
		"emberplus-connection": "^0.1.2"
	},
	"devDependencies": {
		"@companion-module/tools": "^1.0.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.1.2",
		"rimraf": "^4.1.2",
		"typescript": "~4.9"
	}
}
